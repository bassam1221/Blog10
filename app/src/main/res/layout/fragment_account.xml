<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mohammad_bac"
    >

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="139dp"
            android:layout_height="134dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_border">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="9dp"
                android:src="@drawable/insertimage"
                />

            />

        </RelativeLayout>


        <TextView

            android:id="@+id/show_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgUser"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:enabled="false"
            android:gravity="center"
            android:maxLength="20"
            android:padding="5dp"
            android:text="Joey Tribbiani"
            android:textColor="@android:color/white"
            android:textSize="32sp" />


        <TextView
            android:id="@+id/show_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_username"
            android:layout_centerHorizontal="true"
            android:text="new york, usa"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/show_privelge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_email"
            android:layout_centerHorizontal="true"
            android:text="new york, usa"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="14sp" />



    </RelativeLayout>






    <Button
        android:id="@+id/signout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Sign out"
        android:layout_alignParentBottom="true"
        android:background="@drawable/my_shape"
        android:textAllCaps="false"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/whiteTransparentHalf"
        />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="edit profile"
        android:layout_margin="40dp"
        android:layout_above="@+id/signout_button"
        android:background="@drawable/my_shape"
        android:textAllCaps="false"
        android:textColor="@color/whiteTransparentHalf"
        />







</RelativeLayout>

